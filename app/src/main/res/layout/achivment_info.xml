<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".basic_menu.BlankFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.revosleap.blurrylayout.BlurryLayout
        android:id="@+id/blurLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Blurry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blure"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgAchiv"
                android:layout_width="218dp"
                android:layout_height="266dp"
                android:src="@drawable/cup1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameAchiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/imgAchiv"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="@+id/imgAchiv"
                app:layout_constraintTop_toTopOf="@+id/imgAchiv" />

            <LinearLayout
                android:layout_width="223dp"
                android:layout_height="112dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/tree_background"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/imgAchiv"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="@+id/imgAchiv"
                app:layout_constraintTop_toBottomOf="@+id/imgAchiv">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#9E9999"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/info_Achiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#121111" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.revosleap.blurrylayout.BlurryLayout>

</FrameLayout>